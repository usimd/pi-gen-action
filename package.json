{
  "name": "pi-gen-action",
  "version": "1.5.0",
  "description": "GitHub action to build a custom Raspberry Pi image using pi-gen",
  "author": "Simon Domke",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build -m --no-source-map-register --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm test && npm run package && npm run update-readme",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "update-readme": "ts-node src/misc/update-readme.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/usimd/pi-gen-action.git"
  },
  "bugs": {
    "url": "https://github.com/usimd/pi-gen-action/issues"
  },
  "homepage": "https://github.com/usimd/pi-gen-action#readme",
  "keywords": [
    "actions",
    "raspberry",
    "pi-gen"
  ],
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "1.1.1",
    "@actions/github": "^5.1.1",
    "@actions/glob": "^0.4.0",
    "@actions/io": "^1.1.2",
    "ansi-color": "^0.2.1",
    "ansi-colors": "^4.1.3",
    "json-colorizer": "^2.2.2"
  },
  "devDependencies": {
    "@types/jest": "29.5.4",
    "@types/js-yaml": "4.0.5",
    "@types/node": "18.17.12",
    "@types/semver": "7.5.1",
    "@types/tmp": "0.2.3",
    "@typescript-eslint/eslint-plugin": "6.5.0",
    "@typescript-eslint/parser": "6.5.0",
    "@vercel/ncc": "0.36.1",
    "eslint": "8.48.0",
    "eslint-import-resolver-typescript": "3.6.0",
    "eslint-plugin-github": "4.10.0",
    "eslint-plugin-jest": "27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-workspaces": "0.9.0",
    "jest": "29.6.4",
    "jest-mock-extended": "3.0.5",
    "js-yaml": "4.1.0",
    "markdown-replace-section": "0.4.0",
    "prettier": "3.0.3",
    "semver": "7.5.4",
    "tmp": "0.2.1",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2",
    "word-wrap": "1.2.5"
  },
  "overrides": {
    "chalk": "^4.1.0"
  }
}
